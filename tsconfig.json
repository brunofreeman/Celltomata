{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "ts_target/",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "baseUrl": ".",
        "lib": [
            "es2017"
        ],
    },
    "include": [
        "ts_src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".npm",
    ]
}